// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         String   @default("hr") // 'hr', 'admin', etc.
  active       Boolean  @default(true)  // NEW: Add this field
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  notes      Note[]
}

model Team {
  id        Int        @id @default(autoincrement())
  name      String     @unique

   // Manager details (not an employee in system)
  managerName  String?
  managerEmail String?
  
  // Client relationship
  clientId    Int?
  client      Client?    @relation(fields: [clientId], references: [id], onDelete: SetNull)
  
  // Associated employees
  employees   Employee[]
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([clientId])
}

model Client {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  
  // POC Internal (within your organization)
  pocInternalName   String?
  pocInternalEmail  String?
  
  // POC External (client-side contact)
  pocExternalName   String?
  pocExternalEmail  String?
  
  // Address
  address     String?
  
  // Relationships
  teams       Team[]
  employees   Employee[]
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}


model Employee {
  id                        Int      @id @default(autoincrement())
  employeeCode              String?  @unique        // Employee ID from form
  firstName                 String
  lastName                  String
  email                     String   @unique        // main email (weâ€™ll store companyEmail here)
  personalEmail             String?  
  companyEmail              String?
  phone                     String?
  dateOfBirth               DateTime?
  dateOfJoining             DateTime?
  experienceYearsAtJoining  Int?
  experienceMonthsAtJoining Int?
  title                     String?
  teamName                  String?                 // from your "Team" select for now
  gender                    String?  
  active                    Boolean @default(true)

  notes      Note[]

  teamId    Int?
  clientId  Int?
  team      Team?    @relation(fields: [teamId], references: [id])
  client    Client?  @relation(fields: [clientId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id         Int      @id @default(autoincrement())
  content    String
  noteDate   DateTime?
  createdAt  DateTime @default(now())

  // relations
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])

  authorId   Int
  author     User     @relation(fields: [authorId], references: [id])
}
